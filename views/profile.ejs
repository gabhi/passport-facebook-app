              </ul>
              </div><!--/.nav-collapse -->
            </div>
          </div>
        </div>
      </nav>
      <div class="fakeloader"></div>
      <div class="container">
        <div class="page-header text-center">
          <h1>
          <span class="fa fa-anchor"></span> Profile Page</h1>
          <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        </div>
        <div class="row">
          <!-- FACEBOOK INFORMATION -->
          <div class="">
            <div class="well">
              <h3 class="text-primary "> Welcome
              <%= user.facebook.name %>
              </h3>
              <!-- check if the user has this token (is the user authenticated with this social account) -->
              <% if (user.facebook.token) { %>
              <p class="">
                <img src="<%= _json.picture.data.url %>" />
                <br>
                <br>
<% if (zodiacPart) { %>
                <strong>Your prominent traits are </strong>:
                <%= zodiacPart.trait %>
                <br />
                <br />
                <% } %>
                <%= msg %>
<br />
                <br />

                <% if (_json.books) { %>

                <strong>Books</strong>:
                <% for(var i=0; i < _json.books.data.length; i++) { %>
                <td>
                <%= _json.books.data[i].name %>, </td>
                <% } %>
                <br>
<% } %>
                <% if (_json.television) { %>

                <strong>TV</strong>:
                <% for(var i=0; i < _json.television.data.length; i++) { %>
                <td>
                <%= _json.television.data[i].name %>, </td>
                <% } %>
                <br>
                <% } %>


                <% if (_json.music) { %>

                <strong>Music</strong>:
                <% for(var i=0; i < _json.music.data.length; i++) { %>
                <td>
                <%= _json.music.data[i].name %>, </td>
                <% } %>
                <br>
                <% } %>

                <% if (_json.posts) { %>

                <strong>Music</strong>:
                <% for(var i=0; i < _json.posts.data.length; i++) { %>
                <p>
<%= JSON.stringify(_json.posts.data[i].name )%>
                  </p>
                <% } %>
                <br>
                <% } %>


                <%= JSON.stringify(_json.posts) %>



                <% if (_json.favorite_athletes) { %>

                <strong>Favorite athletes</strong>:
                <% for(var i=0; i < _json.favorite_athletes.length; i++) { %>
                <td>
                <%= _json.favorite_athletes[i].name %>, </td>
                <% } %>
                <br>
                <% } %>


                <% if (_json.favorite_teams) { %>

                <strong>Favorite teams</strong>:
                <% for(var i=0; i < _json.favorite_teams.length; i++) { %>
                <td>
                <%= _json.favorite_teams[i].name %>, </td>
                <% } %>
                <br>
                <% } %>




<% if (_json.devices) { %>

                <strong>Device used</strong>:
                <% for(var i=0; i < _json.devices.length; i++) { %>
                <td>
                <%= _json.devices[i].os %>, </td>
                <% } %>
                <br>
                <% } %>



                <strong> </strong>



              </p>
              <% } else { %>
              <a href="/connect/facebook" class="btn btn-primary">Connect Facebook</a>
              <% } %>
            </div>
          </div>
        </div>
      </div>
      <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
      <script src="//gabhi.github.io/fakeloader.js/fakeLoader.js"></script>
      <script>
      $(document).ready(function() {
      $(".fakeloader").fakeLoader({
      timeToHide: 10,
      bgColor: "#1abc9c",
      spinner: "spinner6"
      });
      });
      </script>
    </body>
  </html>
